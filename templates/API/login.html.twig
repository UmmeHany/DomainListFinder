{% extends 'base.html.twig'%}

{% block title %}Login{% endblock %}

{% block javascripts %}
	{{ parent() }}

	<script type="text/javascript">
		$(document).ready(function() {
						var check = document.getElementById("check_status").value;
						window.onload = function(){
							if(check == -1){
								document.getElementById("login_error").style.display = "block";
							}
							else{
								document.getElementById("login_error").style.display = "none";
							}	
						}	
		});
	</script>

{% endblock %}


{% block body %}

	<div class="container" style="width:500px; margin-top: 100px;margin-bottom: 100px;margin-right: 150px;margin-left: 400px;">

		<p style="text-align: center;"><font color="blue" size="5"><b>Login</b></font></p>
		<div class="form-group">
			<form class="well form-horizontal" action="{{ path('login_check') }}" method="post">
			    {# Email Input #}
			    <label for="inputEmail" class="sr-only">Email</label>
			    <input type="text" name="_username" id="username" class="form-control" placeholder="username" required autofocus>
			    </br>

			    {# Password Input #}
			    <label for="inputPassword" class="sr-only">Password</label>
			    <input type="password" name="_password" id="password" class="form-control" placeholder="Password" required>
			    </br>

			    <button class="btn btn-lg btn-primary" type="submit">
			        Login
			    </button>
			    </br>
			    <input type="hidden" id="check_status" name="check_status" value={{check}}>    
			</form>
		</div>

		<span id="login_error" style="display: none;"><font color="red">Enter correct user name and password</font></span>

	</div>
{% endblock %}